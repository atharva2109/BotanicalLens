<!DOCTYPE html>
<html>
<head>
    <title>Chat Page</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
</head>
<body>
<div class="container">
    <h1>Chat Room</h1>
    <div id="messageDisplay" style="height: 300px; overflow-y: scroll;">
        <% messages.forEach(function(message) { %>
            <div>
                <strong><%= message.username %></strong> (<%= new Date(message.timestamp).toLocaleTimeString() %>):
                <%= message.message %>
                <% if (message.imageUrl) { %>
                    <br><img src="<%= message.imageUrl %>" alt="User Image" style="max-width: 100px; max-height: 100px;">
                <% } %>
            </div>
        <% }); %>
    </div>
    <form id="messageForm" action="/chat" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Enter your username" required>
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" name="message" id="message" rows="5" placeholder="Type your message here..." required></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="image" id="image">
        </div>
        <button type="submit" class="btn btn-success">Send</button>
    </form>
</div>
<script>
    function isOnline() {
        return window.navigator.onLine;
    }

    function loadMessages() {
        let messages = JSON.parse(localStorage.getItem('messages')) || [];
        messages.forEach(function(msg) {
            displayMessage(msg);
        });
    }

    function displayMessage(msg) {
        let messageHTML = `<div><strong>${msg.username}</strong> (${new Date(msg.timestamp).toLocaleTimeString()}): ${msg.message}`;
        if (msg.imageUrl) {
            messageHTML += `<br><img src="${msg.imageUrl}" alt="User Image" style="max-width: 100px; max-height: 100px;">`;
        }
        messageHTML += '</div>';
        $('#messageDisplay').append(messageHTML);
    }

    function syncMessages() {
        let messages = JSON.parse(localStorage.getItem('messages')) || [];
        messages.forEach(function(msg) {
            $.post('/chat', msg, function(response) {
                console.log("Message synced: ", response);
            });
        });
        localStorage.setItem('messages', JSON.stringify([]));
    }

    $(document).ready(function() {
        loadMessages();

        $('#messageForm').submit(function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            displayMessage({
                username: $('#username').val(),
                message: $('#message').val(),
                imageUrl: URL.createObjectURL($('#image')[0].files[0]),
                timestamp: new Date()
            });

            if (isOnline()) {
                $.ajax({
                    url: '/chat',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function() {
                        console.log("Message sent to server");
                    }
                });
            } else {
                let messages = JSON.parse(localStorage.getItem('messages')) || [];
                messages.push({
                    username: $('#username').val(),
                    message: $('#message').val(),
                    imageUrl: $('#image').val() ? URL.createObjectURL($('#image')[0].files[0]) : null,
                    timestamp: new Date()
                });
                localStorage.setItem('messages', JSON.stringify(messages));
            }

            $('#message').val('');
            $('#image').val('');
        });

        window.addEventListener('online', syncMessages);
    });
</script>
</body>
</html>